{
  "manifest_version": 3,
  "name": "XPath Selector",
  "version": "1.0.0",
  "description": "XPath Selector Tool",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Show XPath Selector"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/index.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
